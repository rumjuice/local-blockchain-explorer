{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@repos/*": ["src/repos/*"],
      "@models/*": ["src/models/*"],
      "@services/*": ["src/services/*"],
      "@shared/*": ["src/shared/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/public/"]
}
